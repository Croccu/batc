<div class="container-bg" style="background-image: url('<%= @boat.cloudinary %>');height: 100vh; background-size: cover;">
  <div class="container-booking">
    <h2>My <%= @boat.model %> booking</h2>
    <ul class="list-group">
      <li class="list-group-item">Category - <%= @boat.category %></li>
      <li class="list-group-item">Start Date - <%= @booking.start_date %></li>
      <li class="list-group-item">End Date - <%= @booking.end_date %></li>
      <li class="list-group-item">Total Price - Rs.<%= @booking.price %></li>
    </ul>
    <div id="btn-box">
      <%= link_to "Back to bookings list", my_booking_path, class: "btn btn-outline-secondary"%>
      <%= link_to "Cancel booking", boat_booking_path(@boat, @booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger"%>
    </div>
  </div>
</div>
