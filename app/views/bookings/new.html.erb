<div class="container">
  <div>
    <h4>Book this craft</h4>
    <%= simple_form_for [@boat, @booking] do |f| %>
      <%= f.date_field :start_date, class: "form-control" %>
      <br>
      <%= f.date_field :end_date, class: "form-control" %>
      <br>
      <%= f.submit class: "btn btn-outline-primary" %>
    <% end %>
  </div>
</div>
