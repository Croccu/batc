<div class="container d-flex justify-content-center">
  <div class="bg-white p-5 m-5 rounded shadow">
    <h4>Book this craft</h4>
    <%= simple_form_for [@boat, @booking] do |f| %>
      <%= f.date_field :start_date, class: "form-control" %>
      <br>
      <%= f.date_field :end_date, class: "form-control" %>
      <br>
      <%= f.submit class: "btn btn-outline-primary w-100" %>
    <% end %>
    <br>
    <%= link_to "Cancel", boat_path(@boat), class: "btn btn-outline-danger w-100" %>
  </div>
</div>
