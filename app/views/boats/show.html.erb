<div class="container">
  <p><%= @boat.location %></p>

<% @boat.photos.each do |photo| %>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= cl_image_tag photo.key[0], height: 300, width: 400, crop: :fill %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag photo.key[1], height: 300, width: 400, crop: :fill %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag photo.key[2], height: 300, width: 400, crop: :fill %>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>

  <div class="container-content">
    <div class="container-info">
      <h1><%= @boat.model %></h1>
      <h5><%= @boat.location %></h5>
      <div class="container-desc">
        <h4>Description</h4>
        <ul class="stats-cards">
          <li class="stats">Category - <%= @boat.category %></li>
          <li class="stats">Length - <%= @boat.length %>m</li>
          <li class="stats">Max guests - <%= @boat.max_guests %></li>
          <li class="stats">No. of beds - <%= @boat.beds %></li>
          <li class="stats">Number of crew - <%= @boat.crew_number  %></li>
          <li class="stats">Engine power - <%= @boat.engine_power %>hp</li>
        </ul>
      </div>
      <div class="container-equipment">
        <h4>Equipment on board</h4>
      </div>
    </div>
    <div>
      <div class="container-booking-form">
        <h4>Booking form</h4>
      </div>
      <div class="container-renter-questions">
        <h4>Questions to the renter</h4>
      </div>
    </div>
  </div>
</div>

  <div class="container-images">
    <% @boat.photos.each do |photo| %>
     <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
  </div>
