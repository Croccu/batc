



<div class="container">
  <div class="row">
    <% @boats.each do |boat| %>

      <div class="col-lg-4">
        <div class="card bg-light mb-3" style="width: 18rem;">

          <div id="carousel<%= boat.id %>" class="carousel slide">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carousel<%= boat.id %>" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carousel<%= boat.id %>" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carousel<%= boat.id %>" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class= "card-img-top d-block w-100" src= <%= boat.cloudinary %>  alt="">
              </div>
              <div class="carousel-item">
                <img class= "card-img-top d-block w-100" src= <%= boat.cloudinary2 %>  alt="">
              </div>
              <div class="carousel-item">
                <img class= "card-img-top d-block w-100" src= <%= boat.cloudinary3 %>  alt="">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= boat.id %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= boat.id %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <div class="card-body">
            <h5 class="card-title"><%= boat.model %></h5>
            <p class="card-text"><%= boat.location %></p>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <p><%= boat.day_price %>Rs/per day</p>
            <%= link_to "Show more details", boat_path(boat), class: "btn btn-outline-primary w-100" %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

<div style="width: 500px; height: 300px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
